<Page x:Class="GraphChatApp.ConversationCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphChatApp" xmlns:viewmodel="clr-namespace:GraphChatApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ConversationCreatorViewModel}"
	  mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConversationCreationPage">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="20"/>
			<ColumnDefinition/>
			<ColumnDefinition MinWidth="20"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition MinHeight="20"/>
			<RowDefinition Height="2*"/>
			<RowDefinition MinHeight="20"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Column="1" Grid.Row="1" >
			<Label Content="Users you wish to add: "/>
			<TextBox x:Name="UserBox" MinLines="4" Height="60" Text="{Binding CSVUsers}"/>
			<Label Content="Conversation name: "/>
			<TextBox x:Name="Namebox" MaxLines="1" Text="{Binding ConversationName}"/>
			<Button Content="Add conversation" HorizontalAlignment="Right"  VerticalAlignment="Center" Command="{Binding Path=CreateConversation}">
			</Button>
		</StackPanel>

	</Grid>
</Page>
