<UserControl
	x:Class="GraphChatApp.View.MessageViewerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:GraphChatApp.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:view="clr-namespace:GraphChatApp.View"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal">
			<TextBlock
				Margin="0,0,8,0"
				FontWeight="Bold"
				Text="{Binding Author}" />
			<TextBlock Text="{Binding Content}" />
			<Button
				Width="20"
				Height="20"
				Command="{Binding AddResponseCommand}">
				+
			</Button>
		</StackPanel>
		<ItemsControl ItemsSource="{Binding DirectChildren}" Visibility="{Binding ChildrenVisibility}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<view:MessageControl />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</UserControl>
