<Page x:Class="GraphChatApp.ConversationCanvasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphChatApp" xmlns:viewmodel="clr-namespace:GraphChatApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ConversationCreatorViewModel}"
	  mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConversationCanvasPage">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="23*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="ConversationTitle" Text="{Binding ConversationName}"/>
	</Grid>
</Page>
