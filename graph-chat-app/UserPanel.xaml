<Page x:Class="GraphChatApp.UserPanel"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:GraphChatApp" xmlns:chatmodel="clr-namespace:ChatModel;assembly=ChatModel" d:DataContext="{d:DesignInstance Type=chatmodel:ClientChatSystem}"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="UserPanel">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="41*"/>
		</Grid.RowDefinitions>
		<Button Grid.Row="0" Content="Add conversation" Click="AddConversation" />
		<ListView Grid.Row="1"
			x:Name="ConversationListView" ItemsSource="{Binding observableConversations}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Page>